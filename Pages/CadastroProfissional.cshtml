@page
@model MaoCerta.Pages.CadastroProfissionalModel
@{
    ViewData["Title"] = "Cadastro de Profissional - Mão Certa";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <div class="left-panel">
        <h1>Seja um Profissional Mão Certa</h1>
        <p>Cadastre-se como profissional e comece a receber solicitações de serviços.</p>
        <a asp-page="/Login"><button>Já tenho conta</button></a>
    </div>

    <div class="right-panel">
        <h2>Cadastro de Profissional</h2>
        <p>Preencha os dados abaixo para se cadastrar como profissional.</p>

        <form method="post" asp-page="/CadastroProfissional">
            @Html.AntiForgeryToken()
            <input asp-for="Input.Nome" placeholder="Nome Completo" />
            <span asp-validation-for="Input.Nome" class="text-danger"></span>
            
            <input asp-for="Input.Email" placeholder="E-mail" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            
            <input asp-for="Input.Telefone" placeholder="Telefone" />
            <span asp-validation-for="Input.Telefone" class="text-danger"></span>
            
            <input asp-for="Input.Endereco" placeholder="Endereço" />
            <span asp-validation-for="Input.Endereco" class="text-danger"></span>
            
            <textarea asp-for="Input.Descricao" placeholder="Descrição dos seus serviços" rows="3"></textarea>
            <span asp-validation-for="Input.Descricao" class="text-danger"></span>
            
            <select asp-for="Input.CategoriaId" asp-items="Model.Categorias">
                <option value="">Selecione uma categoria</option>
            </select>
            <span asp-validation-for="Input.CategoriaId" class="text-danger"></span>
            
            <input asp-for="Input.Password" type="password" placeholder="Senha" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            
            <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirmar Senha" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            
            <button type="submit" class="login-btn">Cadastrar como Profissional</button>
        </form>

        @if (Model.Mensagem != null)
        {
            <p style="color:red; margin-top:10px;">@Model.Mensagem</p>
        }

        @if (Model.Sucesso)
        {
            <p style="color:green; margin-top:10px;">Cadastro realizado com sucesso!</p>
        }
    </div>
</div>
