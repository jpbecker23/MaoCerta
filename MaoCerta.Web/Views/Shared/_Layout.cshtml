@{
    var pageTitle = ViewData["Title"] is string value && !string.IsNullOrWhiteSpace(value)
        ? $"{value} - Mao Certa"
        : "Mao Certa";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="api-base-url" content="@ViewData["ApiBaseUrl"]" />
    <title>@pageTitle</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind = window.tailwind || {};
        tailwind.config = {
            corePlugins: { preflight: false },
            theme: {
                extend: {
                    colors: { brand: "#0066ff" },
                    boxShadow: {
                        float: "0 18px 50px rgba(15,23,42,0.12)",
                        soft: "0 10px 30px rgba(15,23,42,0.08)"
                    }
                }
            }
        };
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/professionals.css" asp-append-version="true" />
</head>
<body class="bg-slate-50 text-slate-900">
    <div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-sky-50 flex flex-col">
        <header class="main-header shadow-soft backdrop-blur-md bg-white/90 transition-all duration-300">
            <div class="max-w-6xl w-full mx-auto flex items-center justify-between gap-6">
                <div class="brand">
                    <a asp-controller="Home" asp-action="Index" class="logo text-brand">Mao Certa</a>
                    <small class="tagline">Plataforma completa para servicos confiaveis</small>
                </div>
                <nav class="main-nav">
                    <a asp-controller="Home" asp-action="Index" class="nav-link transition duration-200 hover:-translate-y-0.5">Inicio</a>
                    <a asp-controller="Professionals" asp-action="Index" class="nav-link transition duration-200 hover:-translate-y-0.5">Profissionais</a>
                    <a asp-controller="ServiceRequests" asp-action="My" class="nav-link transition duration-200 hover:-translate-y-0.5" data-requires-auth="true" data-client-only="true">Minhas solicitacoes</a>
                    <a asp-controller="ServiceRequests" asp-action="Inbox" class="nav-link transition duration-200 hover:-translate-y-0.5" data-requires-auth="true" data-professional-only="true">Solicitacoes recebidas</a>
                    <a asp-controller="Admin" asp-action="Reviews" class="nav-link transition duration-200 hover:-translate-y-0.5" data-role="Admin">Moderacao</a>
                </nav>
                <div class="auth-nav gap-2" id="auth-nav">
                    <a asp-controller="Account" asp-action="Profile" class="user-pill" id="auth-user-pill" hidden></a>
                    <a asp-controller="Account" asp-action="Login" id="login-link" class="btn ghost hover:-translate-y-0.5">Entrar</a>
                    <a asp-controller="Account" asp-action="Register" id="register-link" class="btn primary hover:-translate-y-0.5">Criar conta</a>
                    <button type="button" class="btn danger hover:-translate-y-0.5" id="logout-button" hidden>Sair</button>
                </div>
            </div>
        </header>

        <div class="notification-bar" id="notification-bar" hidden></div>

        <main role="main" class="content-wrapper max-w-6xl mx-auto flex-1 w-full">
            @RenderBody()
        </main>

        <footer class="site-footer shadow-inner">
            <section>
                <h4>Mao Certa</h4>
                <p>Conectamos clientes e profissionais com inteligencia e transparencia.</p>
            </section>
            <section>
                <h4>Plataforma</h4>
                <ul>
                    <li><a asp-controller="Professionals" asp-action="Index">Buscar profissionais</a></li>
                    <li><a asp-controller="ServiceRequests" asp-action="My">Minhas solicitacoes</a></li>
                    <li><a asp-controller="ServiceRequests" asp-action="Inbox" data-professional-only="true">Solicitacoes recebidas</a></li>
                </ul>
            </section>
            <section>
                <h4>Suporte</h4>
                <ul>
                    <li><a href="mailto:suporte@maocerta.com">suporte@maocerta.com</a></li>
                    <li><a href="tel:+550000000000">+55 00 0000-0000</a></li>
                </ul>
            </section>
        </footer>
    </div>

    <script src="~/js/api.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
